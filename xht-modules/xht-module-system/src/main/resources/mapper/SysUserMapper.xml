<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xht.system.modules.user.dao.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.xht.system.modules.user.domain.vo.SysUserVO">
        <id property="id" column="id" />
        <result property="userType" column="user_type" />
        <result property="userName" column="user_name" />
        <result property="nickName" column="nick_name" />
        <result property="passWord" column="pass_word" />
        <result property="passWordSalt" column="pass_word_salt" />
        <result property="userStatus" column="user_status" />
        <result property="userPhone" column="user_phone" />
        <result property="userAvatar" column="user_avatar" />
        <result property="deptId" column="dept_id" />
        <result property="deptName" column="dept_name" />
        <result property="createBy" column="create_by" />
        <result property="createTime" column="create_time" />
        <result property="updateBy" column="update_by" />
        <result property="updateTime" column="update_time" />
        <association property="dept" javaType="com.xht.system.modules.dept.domain.response.SysDeptResp">
            <id property="id" column="id"/>
            <result property="parentId" column="parent_id"/>
            <result property="deptCode" column="dept_code"/>
            <result property="deptName" column="dept_name"/>
            <result property="deptLevel" column="dept_level"/>
            <result property="deptStatus" column="dept_status"/>
            <result property="deptSort" column="dept_sort"/>
            <result property="ancestors" column="ancestors"/>
            <result property="phone" column="phone"/>
            <result property="email" column="email"/>
            <result property="remark" column="remark"/>
            <result property="createBy" column="create_by"/>
            <result property="createTime" column="create_time"/>
            <result property="updateBy" column="update_by"/>
            <result property="updateTime" column="update_time"/>
        </association>
    </resultMap>
    <sql id="BaseQuerySQL">
        <bind name="delFlag" value="@com.xht.framework.mybatis.enums.DelFlagEnum@NORMAL.getValue()"/>
        SELECT t1.id,
               t1.user_type,
               t1.user_account,
               t1.user_name,
               t1.pass_word,
               t1.pass_word_salt,
               t1.phone_number,
               t1.avatar_url,
               t1.user_status,
               t1.dept_id,
               t1.post_id,
               t1.create_time,
               t1.update_time,
               t1.create_by,
               t1.update_by,
               t3.id,
               t3.parent_id,
               t3.dept_code,
               t3.dept_name,
               t3.dept_level,
               t3.dept_status,
               t3.dept_sort,
               t3.ancestors,
               t3.phone,
               t3.email,
               t3.remark,
               t3.create_by,
               t3.create_time,
               t3.update_by,
               t3.update_time
        FROM sys_user t1
                 left join sys_dept t2 on t1.dept_id = t2.id
        WHERE t1.del_flag = #{delFlag}
          and t2.del_flag = #{delFlag}
    </sql>
    <!-- 根据手机号和身份证号校验用户是否重复 -->
    <select id="checkUserRepeat" resultType="java.lang.Integer">
        <bind name="delFlag" value="@com.xht.framework.mybatis.enums.DelFlagEnum@NORMAL.getValue()"/>
        select count(1)
        from sys_user t1
        left join sys_user_admins t2 on t1.id = t2.user_id
        where t1.del_flag = #{delFlag}
        <if test="neUserId!= null">
            and t1.id != #{neUserId}
        </if>
        and (t1.mobile = #{phoneNumber} or t2.id_card_number = #{idCardNumber})
    </select>

    <!-- 自定义查询 -->
    <select id="queryPageRequest" resultMap="BaseResultMap" parameterType="com.xht.system.modules.user.domain.request.SysUserQuery">
        <include refid="BaseQuerySQL"/>
        <if test="query. keyWord != null and query.keyWord != ''">
            AND (t1.user_name LIKE CONCAT('%', #{query.keyWord}, '%') OR t1.nick_name LIKE CONCAT('%',
            #{query.keyWord}, '%') OR
            t2.real_name LIKE CONCAT('%', #{query.keyWord}, '%') OR t2.id_card_number LIKE CONCAT('%',
            #{query.keyWord}, '%'))
        </if>
        <if test="query.userStatus != null">
            AND t1.user_status = #{query.userStatus}
        </if>
        <if test="query.userName != null and query.userName != ''">
            AND t1.user_name LIKE CONCAT('%', #{query.userName}, '%')
        </if>
        <if test="query.userAccount != null and query.userAccount != ''">
            AND t1.user_account LIKE CONCAT('%', #{query.userAccount}, '%')
        </if>
        <if test="query.realName != null and query.realName != ''">
            AND t2.real_name LIKE CONCAT('%', #{query.realName}, '%')
        </if>
        <if test="query.gender != null">
            AND t2.gender = #{query.gender}
        </if>
        <if test="query.age != null">
            AND t2.age = #{query.age}
        </if>
        <if test="query.idCardNumber != null and query.idCardNumber != ''">
            AND t2.id_card_number LIKE CONCAT('%', #{query.idCardNumber}, '%')
        </if>
        <if test="query.birthDateStart != null">
            AND t2.birth_date &gt;= #{query.birthDateStart}
        </if>
        <if test="query.birthDateEnd != null">
            AND t2.birth_date &lt;= #{query.birthDateEnd}
        </if>
        <if test="query.postalCode != null and query.postalCode != ''">
            AND t2.postal_code = #{query.postalCode}
        </if>
        <if test="query.deptId != null and query.deptId != ''">
            AND t1.dept_id = #{query.deptId}
        </if>
    </select>

    <select id="findInfoByUserId" resultMap="BaseResultMap">
        <include refid="BaseQuerySQL"/>
        and t1.id = #{userId}
    </select>

    <select id="findByUsernameAndLoginType" resultMap="BaseResultMap">
        <include refid="BaseQuerySQL"/>
        <if test="loginType == 'password'">
            and t1.user_name = #{userName}
        </if>
        <if test="loginType == 'email'">
            AND t1.email = #{username}
        </if>
        <if test="loginType == 'phone'">
            AND t1.mobile = #{username}
        </if>
    </select>
</mapper>
