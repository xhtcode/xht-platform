<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xht.modules.system.dao.mapper.SysUserRoleMapper">

    <resultMap id="BaseResultMap" type="com.xht.modules.admin.system.entity.SysUserRoleEntity">
        <id property="roleId" column="role_id" jdbcType="BIGINT"/>
        <result property="userId" column="user_id" jdbcType="BIGINT"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="createBy" column="create_by" jdbcType="VARCHAR"/>
    </resultMap>


    <!-- 根据用户ID获取角色编码-->
    <select id="getRoleCodes" resultType="java.lang.String">
        SELECT t2.role_code
        FROM sys_role t2
                 JOIN sys_user_role t1 ON t2.id = t1.role_id
        WHERE t1.user_id = #{userId}
    </select>

    <!-- 根据用户ID获取角色ID-->
    <select id="selectRoleIdByUserId" resultType="java.lang.Long">
        <bind name="delFlag" value="@com.xht.framework.mybatis.enums.DelFlagEnum@NORMAL.getValue()"/>
        SELECT t1.role_id
        FROM sys_user_role t1
                 left join sys_role t2 on t1.role_id = t2.id
        WHERE t2.del_flag = #{delFlag}
          and t2.role_status = #{roleStatus}
          and t1.user_id = #{userId}
    </select>

    <!-- 根据用户ID获取角色列表-->
    <select id="findRoleListByUserId"
            resultMap="com.xht.modules.admin.system.dao.mapper.SysRoleMapper.BaseResultMap">
        <bind name="delFlag" value="@com.xht.framework.mybatis.enums.DelFlagEnum@NORMAL.getValue()"/>
        SELECT sys_role.*
        FROM sys_user_role
                 left join sys_role on sys_user_role.role_id = sys_role.id
        WHERE sys_role.del_flag = #{delFlag}
          and sys_user_role.user_id = #{userId}
    </select>

</mapper>
